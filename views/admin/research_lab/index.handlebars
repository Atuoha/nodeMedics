

<table class="table table-striped table-responsive">
    <thead>
       <tr>
           <th>Name</th>
           <th>Location</th>
           <th>Est. Date</th>
           <th>Tag</th>
           <th>Sub Content</th>
           <th>Content</th>
           <th>Imagery</th>
           <th>Actions</th>
       </tr>
    </thead>

    <tbody>
       
            {{#if labs}}
                {{#each labs}}
                 <tr>
                    <td>{{name}}</td>
                    <td>{{location}}</td>
                   <td>{{generate_date date 'MMM-Do-Y'}} </td>
                    <td>{{tag}}</td>
                    <td>{{intro}}</td>
                    <td>{{content}}</td>
                    <td><img src="/uploads/{{file}}" width="200" class="thumbnail"></td>
                    <td><a href="/admin/labs/edit/{{id}}" class="btn btn-success"><i class="fa fa-pencil"></i> Edit</a></td>
                    <td><a href="/admin/labs/show/{{id}}" class="btn btn-warning"><i class="fa fa-eye"></i> View</a></td>
                    <td><a href="/admin/labs/delete/{{id}}" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</a></td>
                </tr>
                    
                {{/each}}
            {{else}}
            <div class="alert alert-success">No Research Lab to show</div>
            {{/if}}
    </tbody>
</table>