<!-- ======= Departments Section ======= -->
    <section id="departments" class="departments">
      <div class="container">

        <div class="section-title">
          <h2>Departments</h2>
          <p>We kept at the back of our thoughts that a soldier that fights well battle lives to save more lives and we are standing with on feets stable than rocks placed on earth are the motives we have for all patients we treat</p>
        </div>

        <div class="row">
          <div class="col-lg-3">
            <ul class="nav nav-tabs flex-column">

              {{#if depts}}
                 {{#each depts}}
                  <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#{{tag}}">{{name}}</a>
                  </li>
                {{/each}}
              {{else}}
                <div class="alert alert-success">No Departement</div>
              {{/if}}

            </ul>
          </div>
          <div class="col-lg-9 mt-4 mt-lg-0">
            <div class="tab-content">

              {{#if depts}}
                 {{#each depts}}
                    <div class="tab-pane" id="{{tag}}">
                      <div class="row">
                        <div class="col-lg-8 details order-2 order-lg-1">
                          <h3>{{name}}</h3>
                          <p class="font-italic">{{intro}}</p>
                          <p>{{content}}</p>
                        </div>
                        <div class="col-lg-4 text-center order-1 order-lg-2">
                          <img src="/uploads/{{file}}" alt="" class="img-fluid">
                        </div>
                      </div>
                    </div>
                  {{/each}}  

              {{else}}
                <div class="alert alert-success">No Departments Info</div>
              {{/if}}
             
            </div>
          </div>
        </div>

      </div>
    </section><!-- End Departments Section -->