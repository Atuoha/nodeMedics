  <!-- ======= Services Section ======= -->
    <section id="services" class="services">
      <div class="container">

        <div class="section-title">
          <h2>Services</h2>
          <p>It may be as if we are titled with the notion of treating people but for us it greater than just offering our services for we've allowed our time here to sprout an essence that gives you exactly the good health you deserve right now that we all need it the most</p>
        </div>
        <div class="row">
      {{#if services}}
          {{#each services}}
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
              <div class="icon-box">
                <div class="icon"><i class="fa fa-{{font}}"></i></div>
                <h4><a href="">{{name}}</a></h4>
                <p>{{content}}</p>
              </div>
            </div>
          {{/each}}
      {{else}}
        <div class="alert alert-success">No Service to display</div>
      {{/if}}  
         

        </div>

      </div>
    </section><!-- End Services Section -->